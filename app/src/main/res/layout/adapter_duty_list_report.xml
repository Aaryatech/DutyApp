<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/colorLight"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorLight"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTaskName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:drawablePadding="10dp"
                        android:text="Duty Name"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/sf_ui_bold"
                        android:gravity="center_vertical"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tvDutyWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:drawablePadding="10dp"
                        android:text="1"
                        android:layout_weight="3"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/sf_ui_bold"
                        android:gravity="end"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="3.5"
                        android:text="Shift : "
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:fontFamily="@font/sf_ui_regular"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/tvShift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="9:30"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_ui_regular"
                        android:gravity="start"
                        android:padding="5dp" />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTaskStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="9:30"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_ui_regular"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/tvTaskEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="9:30"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_ui_regular"
                        android:gravity="end"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/ivMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_menu" />

                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemsTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:fontFamily="@font/sf_ui_bold"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Task Detail"
                android:textColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/imageViewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llItemsTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_ui_bold"
                    android:padding="2dp"
                    android:text="Task Name"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_ui_bold"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="PhotReq"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_ui_bold"
                    android:gravity="end"
                    android:padding="2dp"
                    android:text="RemReq"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_ui_bold"
                    android:gravity="end"
                    android:padding="2dp"
                    android:text="Weight"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>